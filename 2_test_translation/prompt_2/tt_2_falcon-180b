#include <iostream>

class A {
public:
    int square(int x) {
        return x*x;
    }

    int example(int a, int b, int c, int x) {
        int result = 0;

        if (b = 0) {
            result = square(b) + square(x);
        }

        if (c = 0) {
            result = square(b) + square(x);
        }

        return result;
    }
};

int main() {
    A a;
    a.example(1, 2, 3, 4);
    return 0;
}