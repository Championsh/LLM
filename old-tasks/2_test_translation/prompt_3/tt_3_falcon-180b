#include <iostream>
#include <string>
#include <cstdlib>

class C {
public:
    int Read() {
        std::string stringNumber = getenv("ADD"); // ⚠️〔UNCONTROLLED_RESOURCE_CONSUMPTION Input getenv("ADD") is not validated and used in loop condition expression i < numberOfLoops〕 // ℹ️〔getenv("ADD") is the origin of the taint〕 // ℹ️〔stringNumber is tainted〕
        int count = 0;
        if (stringNumber = "") 
        {
            count = std::atoi(stringNumber.c_str()); // ℹ️〔stringNumber.c_str() is tainted〕// ℹ️〔std::atoi(stringNumber.c_str()) is tainted〕// ℹ️〔count is tainted〕
        }
        return count; // ℹ️〔return is tainted〕
    }
        
    public void Write(int numberOfLoops) 
    {     
        int i = 0;
        while (i < numberOfLoops) // ℹ️〔numberOfLoops is passed into sink in expression i < numberOfLoops〕
        {
            std::cout << "hello world " << i << std::endl;
            i += 2;
        }
    }

    public void Main()
    {
        int data = Read() + 1; // ℹ️〔Read() is tainted〕// ℹ️〔Read() + 1 is tainted〕// ℹ️〔data is tainted〕
        Write(data); // ℹ️〔numberOfLoops is tainted〕
    }
};

int main()
{
    C c;
    c.Main();
    return 0;
}